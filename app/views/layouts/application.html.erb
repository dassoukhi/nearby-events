<!DOCTYPE html>
<html>
  <head>
    <title>NearbyEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

                                            <!-- header -->
    <header  id='header' class='fixed-top'>
      <nav class='navbar navbar-expand-lg navbar-dark bg-dark'>
        <div class="container-fluid">
          <%= link_to 'Nearby-Events', root_path , class: 'navbar-brand'%>
          <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
            <span class='navbar-toggler-icon'></span>
          </button>

          <div class='collapse navbar-collapse' id='navbarSupportedContent'>
            <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
              <li class='nav-item active'>
                <%= link_to 'Home', root_path , class: 'nav-link'%>
              </li>
              <li class='nav-item'>
                <%= link_to 'Events', events_path , class: 'nav-link'%>
              </li>

            </ul>

              <form class='class="d-flex"' >
                <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary btn-light' unless user_signed_in? %>
                <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary btn-info mr-2', style: "background-color: #68AFB8" unless user_signed_in? %>
                <%= link_to 'Sign out', destroy_user_session_path, class: 'btn btn-primary btn-success', method: :delete if user_signed_in? %>
              </form>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
                                             
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
