<h1>All Events</h1>

<ul>
	<% @events.each do |event| %>
	<li><%= link_to event.name, event_path(event) %></li>
	<% end %>

</ul>

<%= link_to "Add_Event", new_event_path %>



<div id='carouselControls' class='carousel slide' data-ride='carousel'>
      <div class='carousel-inner '>
        <div class='carousel-item active' data-interval="1000">
          <%= image_tag("comedie3.jpg", class: 'd-block w-100', style: 'object-fit:cover; height:600px', alt: 'Place de la comedie') %>
          <div class='carousel-caption d-none d-sm-block py-1 b' style='background:rgba(45, 45, 45,0.7); margin-left:25%; margin-right:25%; border-radius:9px'>
            <h5>Place de la comedie</h5>
            <p>Au coeur de Montpellier</p>
          </div>
        </div>
        
        <div class='carousel-item '>

          <%= image_tag("arena2.jpg", class: 'd-block w-100', style: 'object-fit:cover; height:600px', alt: 'Second slide') %>
          
          <div class='carousel-caption d-none d-sm-block py-1 b' style='background:rgba(45, 45, 45,0.7); margin-left:25%; margin-right:25%; border-radius:9px'>
            <h5>Sud de France Arena</h5>
            <p>Transpirez, lachez-vous</p>

          </div>
        </div>

        <div class='carousel-item '>
          <%= image_tag("tram1.jpg", class: 'd-block w-100', style: 'object-fit:cover; height:600px', alt: 'Third slide') %>

          
          <div class='carousel-caption d-none d-sm-block py-1 b' style='background:rgba(45, 45, 45,0.7); margin-left:25%; margin-right:25%; border-radius:9px'>
            <h5>Rives du Lez</h5>
            <p>Laissez-vous emporter</p>
          </div>
        </div>

      </div>
      
      <a class='carousel-control-prev' style='z-index:1' href='#carouselControls' role='button' data-slide='prev'>
        <span class='carousel-control-prev-icon' aria-hidden='true'></span>
        <span class='sr-only'>Previous</span>
      </a>

      <a class='carousel-control-next' style='z-index:1' href='#carouselControls' role='button' data-slide='next'>
        <span class='carousel-control-next-icon' aria-hidden='true'></span>
        <span class='sr-only'>Next</span>
      </a>
    </div>