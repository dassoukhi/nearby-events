<h1><%= @event.name %></h1>
<p><%= @event.adress %></p>
<p><%= @event.theme %></p>
<p><%= @event.description %></p>
<p><%= @event.date %></p>
<p><%= cl_image_tag @event.photo.key if @event.photo.attached? %></p>

<% if policy(@event).edit? %>
	<%= link_to 'Edit', edit_event_path(@event) %> 
	
<%end%>