<form method='post'>
	<div class='cadre mx-auto bg-white shadow mb-5'>
		<div class='container mw-100'>
			<div class='row p-3'>
				<% @users.each do |user| %>
				<div class='col-sm-3 col-md-2 border p-2 m-auto' style='height:75%'>
					<h4><%= user.first_name %></h4>
					<p><%= user.last_name %></p>
					<p><%= user.email %></p>
					<%= link_to "Supprimer cet utilisateur", user_registration_path(user), :method => :delete, class: 'btn btn-outline-danger' %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</form>